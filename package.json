{
	"name": "@ntvr/stylelint-config-ntvr",
	"version": "1.1.0",
	"description": "Ntvr' shareable config for stylelint",
	"keywords": [
		"stylelint",
		"stylelint-config"
	],
	"author": "ntvr",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ntvr/stylelint-config-ntvr.git"
	},
	"bugs": {
		"url": "https://github.com/ntvr/stylelint-config-ntvr/issues"
	},
	"homepage": "https://github.com/ntvr/stylelint-config-ntvr#readme",
	"main": "index.js",
	"files": [
		"index.js"
	],
	"engines": {
		"node": ">=8.7.0"
	},
	"dependencies": {
		"stylelint-config-standard": "^20.0.0"
	},
	"devDependencies": {
		"babel-eslint": "^10.1.0",
		"eslint": "^7.13.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"jest": "^26.6.3",
		"stylelint": "^13.7.2"
	},
	"peerDependencies": {
		"stylelint": "^13.7.2"
	},
	"scripts": {
		"lint": "eslint . --ignore-path .gitignore",
		"pretest": "npm run lint",
		"test": "jest",
		"watch": "jest --watch"
	},
	"eslintConfig": {
		"env": {
			"es6": true,
			"node": true,
			"jest": true
		},
		"extends": "airbnb",
		"parser": "babel-eslint",
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1,
					"VariableDeclarator": 1,
					"outerIIFEBody": 1,
					"MemberExpression": 1,
					"FunctionDeclaration": {
						"parameters": 1,
						"body": 1
					},
					"FunctionExpression": {
						"parameters": 1,
						"body": 1
					},
					"CallExpression": {
						"arguments": 1
					}
				}
			],
			"max-len": [
				"error",
				120,
				4,
				{
					"ignoreUrls": true,
					"ignoreComments": false,
					"ignoreRegExpLiterals": true,
					"ignoreStrings": true,
					"ignoreTemplateLiterals": true
				}
			],
			"no-tabs": "off"
		}
	},
	"jest": {
		"testEnvironment": "node",
		"verbose": true
	}
}
